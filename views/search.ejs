<!DOCTYPE html>
<html lang="en">
<% include layout/head %>

<body>
    <% include layout/nav %>
    <div class="container">
        <div class="row mt-4">
            <div class="col-10 offset-1">
                <form class="form-inline" method="post">
                    <div class="form-group mx-sm-3 mb-2">
                        <label for="word" class="sr-only">검색어</label>
                        <input type="text" name="word" class="form-control" id="word" placeholder="검색어 입력">
                    </div>
                    <button type="submit" class="btn btn-primary mb-2">검색하기</button>
                </form>
            </div>
        </div>
        <% if(typeof list != 'undefined') { %>
        <div class="row mt-4">
            <div class="col-10 offset-1">
                <h1><%= msg %></h1>
                <ul class="list-group">
                    <%= list.length %>
                <% for(let i = 0; i < list.length; i++){ %>
                    <li class="list-group-item"><%= list[i] %></li>
                <% } %>
                </ul>
            </div>
        </div>
        <% } %>
    </div>
</body>

</html>